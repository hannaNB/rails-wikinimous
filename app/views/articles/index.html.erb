<%= link_to "New article", new_article_path %>

<% @articles.each do |article| %>
    <h2><%= article.title %></h2>
    <p><%= article.content %></p>
    <%= link_to "Voir", article_path(article) %>
    <%= link_to "Delete", article_path(article), method: :delete, 
    data: { confirm: "Are you sure?" } %>
<% end %>
